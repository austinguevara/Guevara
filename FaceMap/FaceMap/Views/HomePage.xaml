<Page
    x:Class="FaceMap.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:facebookControls="using:Facebook.Client.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FaceMap.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF3B5998">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Content="Login To Facebook" HorizontalAlignment="Center" 
                Name="btnFacebookLogin" VerticalAlignment="Center" Click="btnFacebookLogin_Click" 
                Background="White" Foreground="#FF3B5998" FontSize="36" Padding="20" FontWeight="Bold" />
    </Grid>
</Page>